---
const { badge, title1, title2, subtitle, button, aria } = Astro.props;
---

<section id="hero" class="relative flex min-h-screen w-full items-center justify-center bg-white px-6 dark:bg-black">
  <div class="relative z-10 mx-auto max-w-7xl text-center">
    <div class="mx-auto mb-6 inline-flex items-center gap-1.5 rounded-full border border-sky-500/20 bg-sky-500/10 px-3 py-1.5 text-xs font-medium whitespace-nowrap text-sky-600 sm:mb-8 sm:text-sm dark:text-sky-400">
      <div class="h-1.5 w-1.5 animate-pulse rounded-full bg-sky-600 sm:h-2 sm:w-2 dark:bg-sky-400"></div>
      {badge}
    </div>
    <h1 class="mb-8 text-6xl leading-[0.8] font-black tracking-tight text-neutral-900 sm:text-7xl md:text-8xl lg:text-9xl xl:text-[10rem] dark:text-neutral-100">
      <span class="block">{title1}</span>
      <span class="block">{title2}</span>
    </h1>
    <p class="mx-auto mb-12 max-w-sm text-base leading-[1.1] font-normal tracking-tight text-neutral-700 opacity-80 md:max-w-xl md:text-xl dark:text-neutral-300">{subtitle}</p>
    <div class="mb-16">
      <a href="/contact" class="inline-flex items-center gap-2 rounded-full border border-sky-600 bg-sky-500 px-8 py-4 text-lg font-semibold tracking-tight text-white transition-colors duration-200 hover:bg-sky-600 dark:text-black">
        {button}
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </div>
  <div class="absolute bottom-6 left-1/2 z-10 -translate-x-1/2 transform animate-bounce">
    <a href="#services" aria-label={aria.scroll} class="cursor-pointer">
      <svg class="h-6 w-6 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>
