---
const { title, description, button } = Astro.props;
---

<section id="pageNotFound" class="relative flex min-h-screen w-full items-center justify-center bg-neutral-50 px-6 dark:bg-neutral-950">
  <div class="relative z-10 mx-auto max-w-7xl text-center">
    <h1 class="mb-8 text-7xl leading-[0.8] font-black tracking-tight text-neutral-900 md:text-8xl lg:text-9xl dark:text-neutral-100">
      <span class="block">{title}</span>
    </h1>
    <p class="mx-auto mb-8 max-w-xs text-lg leading-[1.1] font-normal tracking-tight text-neutral-700 opacity-80 md:max-w-md md:text-2xl dark:text-neutral-300">{description}</p>
    <div class="mb-16">
      <a href="/" class="inline-flex items-center gap-2 rounded-full bg-sky-500 px-8 py-4 text-lg font-semibold tracking-tight text-white transition-colors duration-200 hover:bg-sky-600 dark:text-black">
        {button}
      </a>
    </div>
  </div>
</section>
