---
const { header } = Astro.props;
---

<section class="w-full bg-neutral-50 px-6 pt-24 md:pt-32 dark:bg-neutral-950">
  <div class="mx-auto max-w-4xl text-center">
    <div class="mx-auto mb-6 inline-flex items-center gap-2 rounded-full border border-blue-500/20 bg-blue-50 px-3 py-1.5 whitespace-nowrap sm:mb-8 dark:bg-blue-950">
      <span class="text-xs font-medium text-blue-600 sm:text-sm dark:text-blue-400">{header.badge}</span>
    </div>
    <h1 class="header-section mb-4 text-neutral-900 dark:text-neutral-100">
      {header.title}
    </h1>
    <p class="mx-auto max-w-xs text-base leading-[1.1] text-neutral-700 md:max-w-xl md:text-lg dark:text-neutral-300" set:html={header.subtitle} />
  </div>
</section>
