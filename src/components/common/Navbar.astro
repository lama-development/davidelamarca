---
const { navbar } = Astro.props;
const langPrefix = Astro.url.pathname.startsWith("/en") ? "/en" : "";
const currentPath = Astro.url.pathname;
const normalizedPath = currentPath.endsWith("/") && currentPath !== "/" ? currentPath.slice(0, -1) : currentPath;
function isLinkActive(href: string): boolean {
  const normalizedHref = href.endsWith("/") ? href.slice(0, -1) : href;
  return normalizedHref === normalizedPath || (normalizedPath === "/" && normalizedHref === "");
}
const activeClasses = "bg-neutral-100 dark:bg-neutral-950 border border-neutral-200 dark:border-neutral-800";
---

<!-- Skip to content link (visually hidden until focused) -->
<a href="#main-content" class="fixed -left-[9999px] h-px w-px overflow-hidden focus:top-0 focus:left-1/2 focus:z-[100] focus:h-auto focus:w-auto focus:-translate-x-1/2 focus:overflow-visible focus:rounded-b-md focus:bg-blue-500 focus:px-4 focus:py-2 focus:text-white focus:no-underline">
  {navbar.skipToContent}
</a>

<nav id="navbar" class="fixed top-0 right-0 left-0 z-50 h-12 border-b border-neutral-200 bg-white md:h-16 dark:border-neutral-800 dark:bg-black">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-12 items-center justify-between md:h-16">
      <a href={`${langPrefix}/`} class="flex items-center space-x-2">
        <svg class="h-6 w-6" viewBox="0 0 540 600" fill="none" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <linearGradient id="logoGradient" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:#119CFC;stop-opacity:1"></stop>
              <stop offset="100%" style="stop-color:#1655E7;stop-opacity:1"></stop>
            </linearGradient>
          </defs>
          <path fill-rule="evenodd" clip-rule="evenodd" d="M540 450.004L270 600L119.997 516.677V220.61L194.999 178.949L270 137.287L420.003 220.61V379.399L270 462.713L240.003 446.044V291.207L270 274.575L299.997 291.216V377.41L360 344.091V255.9L270 205.886L180 255.9V481.343L270 531.356L479.997 414.697V185.303L270 68.6437L60.003 185.303V483.341L0 450.004V149.996L270 0L540 149.996V450.004Z" fill="url(#logoGradient)"></path>
        </svg>
        <span class="text-base font-medium text-neutral-900 dark:text-neutral-100">{navbar.brand}</span>
      </a>
      <div class="hidden items-center space-x-1 md:flex">
        <a href={`${langPrefix}/`} class={`nav-link rounded-full px-4 py-2 text-base font-normal text-neutral-900 hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800 ${isLinkActive(`${langPrefix}/`) && activeClasses}`}>{navbar.page1}</a>
        <a href={`${langPrefix}/projects`} class={`nav-link rounded-full px-4 py-2 text-base font-normal text-neutral-900 hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800 ${isLinkActive(`${langPrefix}/projects`) && activeClasses}`}>{navbar.page2}</a>
        <a href={`${langPrefix}/contact`} class={`nav-link rounded-full px-4 py-2 text-base font-normal text-neutral-900 hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800 ${isLinkActive(`${langPrefix}/contact`) && activeClasses}`}>{navbar.page3}</a>
      </div>
      <div class="md:hidden">
        <button id="mobile-menu-button" aria-label={navbar.aria.menu} class="mobile-menu-btn cursor-pointer rounded-full p-2 text-neutral-900 hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800">
          <svg id="chevron-icon" class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div id="mobile-menu" class="absolute top-14 right-4 z-50 hidden w-48 rounded-3xl border border-neutral-200 bg-white py-1 md:top-18 dark:border-neutral-800 dark:bg-black">
          <a href={`${langPrefix}/`} class={`mx-2 my-1 flex items-center space-x-2 rounded-full px-3 py-2 text-sm font-medium text-neutral-900  hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800 ${isLinkActive(`${langPrefix}/`) && activeClasses}`}>
            <svg class="h-4 w-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span>{navbar.page1}</span>
          </a>
          <a href={`${langPrefix}/projects`} class={`mx-2 my-1 flex items-center space-x-2 rounded-full px-3 py-2 text-sm font-medium text-neutral-900  hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800 ${isLinkActive(`${langPrefix}/projects`) && activeClasses}`}>
            <svg class="h-4 w-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            <span>{navbar.page2}</span>
          </a>
          <a href={`${langPrefix}/contact`} class={`mx-2 my-1 flex items-center space-x-2 rounded-full px-3 py-2 text-sm font-medium text-neutral-900  hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800 ${isLinkActive(`${langPrefix}/contact`) && activeClasses}`}>
            <svg class="h-4 w-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>{navbar.page3}</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>
