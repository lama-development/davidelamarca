---
const { navbar } = Astro.props;
const langPrefix = Astro.url.pathname.startsWith("/en") ? "/en" : "";
const currentPath = Astro.url.pathname;
const normalizedPath = currentPath.endsWith("/") && currentPath !== "/" ? currentPath.slice(0, -1) : currentPath;
function isLinkActive(href: string): boolean {
  const normalizedHref = href.endsWith("/") ? href.slice(0, -1) : href;
  return normalizedHref === normalizedPath || (normalizedPath === "/" && normalizedHref === "");
}
const activeClasses = "bg-neutral-100 dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800";
---

<nav id="navbar" class="fixed top-0 right-0 left-0 z-50 h-12 border-b border-neutral-200 bg-white md:h-16 dark:border-neutral-800 dark:bg-black">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-12 items-center justify-between md:h-16">
      <a href={`${langPrefix}/`} class="flex items-center space-x-2">
        <img src="favicon.svg" alt="Logo" class="h-6 w-6" />
        <span class="text-base font-medium text-neutral-900 dark:text-neutral-100">{navbar.brand}</span>
      </a>
      <div class="hidden items-center space-x-1 md:flex">
        <a href={`${langPrefix}/`} class={`nav-link rounded-full px-4 py-2 text-base font-normal text-neutral-900 transition-colors duration-200 hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800 ${isLinkActive(`${langPrefix}/`) && activeClasses}`}>{navbar.page1}</a>
        <a href={`${langPrefix}/projects`} class={`nav-link rounded-full px-4 py-2 text-base font-normal text-neutral-900 transition-colors duration-200 hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800 ${isLinkActive(`${langPrefix}/projects`) && activeClasses}`}>{navbar.page2}</a>
        <a href={`${langPrefix}/contact`} class={`nav-link rounded-full px-4 py-2 text-base font-normal text-neutral-900 transition-colors duration-200 hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800 ${isLinkActive(`${langPrefix}/contact`) && activeClasses}`}>{navbar.page3}</a>
      </div>
      <div class="md:hidden">
        <button id="mobile-menu-button" aria-label={navbar.aria.menu} class="mobile-menu-btn cursor-pointer rounded-full p-2 text-neutral-900 transition-colors duration-200 hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800">
          <svg id="chevron-icon" class="h-4 w-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div id="mobile-menu" class="absolute top-14 right-4 z-50 hidden w-48 rounded-3xl border border-neutral-200 bg-neutral-50 py-1 md:top-18 dark:border-neutral-800 dark:bg-neutral-950">
          <a href={`${langPrefix}/`} class={`mx-2 my-1 flex items-center space-x-2 rounded-full px-3 py-2 text-sm font-medium text-neutral-900 transition-colors duration-200 hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800 ${isLinkActive(`${langPrefix}/`) && activeClasses}`}>
            <svg class="h-4 w-4 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span>{navbar.page1}</span>
          </a>
          <a href={`${langPrefix}/projects`} class={`mx-2 my-1 flex items-center space-x-2 rounded-full px-3 py-2 text-sm font-medium text-neutral-900 transition-colors duration-200 hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800 ${isLinkActive(`${langPrefix}/projects`) && activeClasses}`}>
            <svg class="h-4 w-4 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            <span>{navbar.page2}</span>
          </a>
          <a href={`${langPrefix}/contact`} class={`mx-2 my-1 flex items-center space-x-2 rounded-full px-3 py-2 text-sm font-medium text-neutral-900 transition-colors duration-200 hover:bg-neutral-200 dark:text-neutral-100 dark:hover:bg-neutral-800 ${isLinkActive(`${langPrefix}/contact`) && activeClasses}`}>
            <svg class="h-4 w-4 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>{navbar.page3}</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>
<div id="mobile-menu-overlay" class="fixed inset-0 z-40 hidden bg-white/75 backdrop-blur-xs transition-all duration-200 dark:bg-black/75"></div>
