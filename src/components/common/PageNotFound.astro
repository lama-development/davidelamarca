---
const { pageNotFound } = Astro.props;
const langPrefix = Astro.url.pathname.startsWith("/en") ? "/en" : "";
---

<section id="pageNotFound" class="relative flex min-h-screen w-full items-center justify-center border-b border-neutral-200 bg-neutral-100 px-6 dark:border-neutral-800 dark:bg-neutral-900">
  <div class="relative z-10 mx-auto max-w-7xl text-center">
    <div class="mx-auto mb-6 inline-flex items-center gap-2 rounded-full border border-sky-500/20 bg-sky-500/10 px-3 py-1.5 text-xs font-medium whitespace-nowrap text-sky-500 sm:mb-8 sm:text-sm">
      <span class="text-xs font-medium text-sky-500 sm:text-sm">404</span>
    </div>
    <h1 class="mb-8 text-5xl leading-[0.8] font-bold tracking-tight text-neutral-900 sm:text-7xl dark:text-neutral-100">
      <span class="block">{pageNotFound.title}</span>
    </h1>
    <p class="mx-auto mb-8 max-w-xs text-base leading-[1.1] text-neutral-700 md:max-w-lg md:text-lg dark:text-neutral-300">{pageNotFound.subtitle}</p>
    <div class="mb-16">
      <a href={`${langPrefix}/`} class="inline-flex items-center gap-2 rounded-full bg-sky-500 px-8 py-4 text-lg font-semibold tracking-tight text-white transition-colors duration-200 hover:bg-sky-600 dark:text-black">
        {pageNotFound.button}
      </a>
    </div>
  </div>
</section>
