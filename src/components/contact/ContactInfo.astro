---
const { contacts } = Astro.props;
---

<section class="bg-gradient-to-br from-neutral-50 via-white to-sky-50 px-6 py-16 dark:from-neutral-900 dark:via-black dark:to-neutral-900">
  <div class="mx-auto max-w-6xl">
    <div class="grid gap-8 lg:grid-cols-3">
      <!-- Direct Contact -->
      <div class="group rounded-3xl border border-neutral-200 bg-white p-8 transition-all duration-300 hover:border-sky-300 dark:border-neutral-700 dark:bg-neutral-900 dark:hover:border-sky-600">
        <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-2xl bg-sky-500/10 group-hover:bg-sky-500/20">
          <svg class="h-8 w-8 text-sky-600 dark:text-sky-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="mb-3 text-xl font-bold text-neutral-900 dark:text-neutral-100">{contacts.email}</h3>
        <p class="mb-4 text-neutral-600 dark:text-neutral-400">Per richieste generali e informazioni</p>
        <a href="mailto:info@davidelamarca.com" class="inline-flex items-center gap-2 text-sky-600 transition-colors hover:text-sky-700 dark:text-sky-400 dark:hover:text-sky-300">
          <span class="font-medium">info@davidelamarca.com</span>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </a>
      </div>

      <!-- Response Time -->
      <div class="group rounded-3xl border border-neutral-200 bg-white p-8 transition-all duration-300 hover:border-green-300 dark:border-neutral-700 dark:bg-neutral-900 dark:hover:border-green-600">
        <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-2xl bg-green-500/10 group-hover:bg-green-500/20">
          <svg class="h-8 w-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="mb-3 text-xl font-bold text-neutral-900 dark:text-neutral-100">Tempi di risposta</h3>
        <p class="mb-4 text-neutral-600 dark:text-neutral-400">Rispondo sempre entro</p>
        <div class="text-2xl font-bold text-green-600 dark:text-green-400">48 ore</div>
      </div>

      <!-- Social Networks -->
      <div class="group rounded-3xl border border-neutral-200 bg-white p-8 transition-all duration-300 hover:border-purple-300 dark:border-neutral-700 dark:bg-neutral-900 dark:hover:border-purple-600">
        <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-2xl bg-purple-500/10 group-hover:bg-purple-500/20">
          <svg class="h-8 w-8 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <h3 class="mb-3 text-xl font-bold text-neutral-900 dark:text-neutral-100">{contacts.social}</h3>
        <p class="mb-6 text-neutral-600 dark:text-neutral-400">Seguimi sui social network</p>
        <div class="flex gap-3">
          <a href="https://linkedin.com/in/davide-la-marca-178241254" target="_blank" class="group/social flex h-12 w-12 items-center justify-center rounded-xl border border-neutral-200 text-neutral-600 transition-all duration-200 hover:border-blue-500 hover:bg-blue-50 hover:text-blue-600 dark:border-neutral-700 dark:text-neutral-400 dark:hover:border-blue-400 dark:hover:bg-blue-950 dark:hover:text-blue-400">
