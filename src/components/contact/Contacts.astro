---
const { alternativeData } = Astro.props;
const langPrefix = Astro.url.pathname.startsWith("/en") ? "/en" : "";
---

<section class="w-full border-b border-neutral-200 bg-neutral-100 px-6 py-16 sm:py-20 dark:border-neutral-800 dark:bg-neutral-900">
  <div class="mx-auto max-w-4xl">
    <h2 class="mb-12 text-center text-3xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100">
      {alternativeData.title}
    </h2>

    <div class="grid gap-8 md:grid-cols-2">
      <!-- Email Contact -->
      <div class="rounded-2xl border border-neutral-200 bg-neutral-50 p-6 sm:p-8 dark:border-neutral-800 dark:bg-neutral-950">
        <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-sky-100 dark:bg-sky-900/20">
          <svg class="h-6 w-6 text-sky-600 dark:text-sky-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="mb-3 text-xl font-semibold text-neutral-900 dark:text-neutral-100">
          {alternativeData.email.title}
        </h3>
        <p class="mb-4 text-sm text-neutral-600 dark:text-neutral-400">
          {alternativeData.email.description}
        </p>
        <a href={`mailto:${alternativeData.email.address}`} class="inline-flex items-center gap-2 font-medium text-sky-600 hover:text-sky-700 dark:text-sky-400 dark:hover:text-sky-300" aria-label="Send email">
          {alternativeData.email.address}
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </a>
      </div>

      <!-- Social Links -->
      <div class="rounded-2xl border border-neutral-200 bg-neutral-50 p-6 sm:p-8 dark:border-neutral-800 dark:bg-neutral-950">
        <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-sky-100 dark:bg-sky-900/20">
          <svg class="h-6 w-6 text-sky-600 dark:text-sky-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <h3 class="mb-6 text-xl font-semibold text-neutral-900 dark:text-neutral-100">
          {alternativeData.social.title}
        </h3>
        <div class="flex flex-wrap gap-4">
          <!-- LinkedIn -->
          <a href="https://linkedin.com/in/davidelamarca" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 rounded-lg border border-neutral-200 bg-neutral-50 p-3 text-neutral-700 transition-colors hover:border-sky-300 hover:bg-sky-50 hover:text-sky-700 dark:border-neutral-700 dark:bg-neutral-800 dark:text-neutral-300 dark:hover:border-sky-600 dark:hover:bg-sky-900/20 dark:hover:text-sky-400" aria-label="LinkedIn Profile">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
            </svg>
            LinkedIn
