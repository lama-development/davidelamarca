---
const { form } = Astro.props;
const langPrefix = Astro.url.pathname.startsWith("/en") ? "/en" : "";
---

<section class="m:py-12 w-full border-b border-neutral-200 bg-neutral-50 px-6 py-12 pb-24 dark:border-neutral-800 dark:bg-neutral-950">
  <div class="mx-auto max-w-4xl">
    <div id="multi-step-form" class="rounded-2xl border border-neutral-200 bg-neutral-100 p-6 sm:p-8 md:p-10 dark:border-neutral-800 dark:bg-neutral-900">
      <form id="contact-form" action="/api/contact" method="POST" data-step-text={form.stepText} data-submit-text={form.navigation.submit}>
        <!-- Step 1: Terms  -->
        <div id="step-1" class="step-content">
          <div class="mb-8 flex items-center space-x-3">
            <div class="flex h-12 w-12 items-center justify-center rounded-xl border border-sky-500/20 bg-sky-500/10">
              <svg class="h-6 w-6 text-sky-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2"></path><path d="M9 3m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v0a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z"></path>
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100">{form.step1.title}</h2>
              <p class="text-sm text-neutral-600 dark:text-neutral-400">{form.step1.description}</p>
            </div>
          </div>
          <ol class="mb-8 list-inside list-decimal space-y-3">
            {form.step1.rules.map((rule) => <li class="leading-relaxed text-neutral-800 marker:text-neutral-400 dark:text-neutral-200 marker:dark:text-neutral-500">{rule}</li>)}
          </ol>
          <div class="mb-8 rounded-lg border border-neutral-200 bg-neutral-50 p-6 dark:border-neutral-800 dark:bg-neutral-950">
            <label class="flex cursor-pointer items-start space-x-4">
              <input type="checkbox" id="accept-rules" required class="mt-1 h-5 w-5 cursor-pointer" />
              <div class="flex-1">
                <span class="block font-medium text-neutral-900 dark:text-neutral-100">{form.step1.accept}</span>
                <span class="mt-1 block text-sm text-neutral-600 dark:text-neutral-400">
                  {form.step1.termsText}
                  <a href={`${langPrefix}/terms-of-service`} class="text-sky-500 hover:underline">{form.step1.termsLink}</a>.
                </span>
              </div>
            </label>
            <div class="error-message mt-3 ml-9 hidden text-sm text-red-600 dark:text-red-400" data-field="accept-rules">
              {form.validation.acceptTerms}
            </div>
          </div>
        </div>
        <!-- Step 2: Basic Information -->
        <div id="step-2" class="step-content hidden">
          <div class="mb-10">
            <div class="mb-6 flex items-center space-x-3">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl border border-sky-500/20 bg-sky-500/10">
                <svg class="h-6 w-6 text-sky-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M20 6v12a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2z"></path><path d="M10 16h6"></path><path d="M13 11m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path><path d="M4 8h3"></path><path d="M4 12h3"></path><path d="M4 16h3"></path>
                </svg>
              </div>
              <div>
                <h2 class="text-2xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100">{form.step2.title}</h2>
                <p class="text-sm text-neutral-600 dark:text-neutral-400">{form.step2.description}</p>
              </div>
            </div>
          </div>
          <div class="grid gap-6 md:grid-cols-2">
            <div>
              <label for="name" class="mb-2 block text-sm font-medium text-neutral-800 dark:text-neutral-200">{form.step2.name.label}</label>
              <input type="text" id="name" name="name" required placeholder={form.step2.name.placeholder} class="w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-neutral-900 placeholder-neutral-400 dark:border-neutral-800 dark:bg-neutral-800 dark:bg-neutral-950 dark:text-neutral-100" />
              <div class="error-message mt-1 hidden text-sm text-red-600 dark:text-red-400" data-field="name">
                {form.validation.required}
              </div>
            </div>
            <div>
              <label for="email" class="mb-2 block text-sm font-medium text-neutral-800 dark:text-neutral-200">{form.step2.email.label}</label>
              <input type="email" id="email" name="email" required placeholder={form.step2.email.placeholder} class="w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-neutral-900 placeholder-neutral-400 dark:border-neutral-800 dark:bg-neutral-800 dark:bg-neutral-950 dark:text-neutral-100" />
              <div class="error-message mt-1 hidden text-sm text-red-600 dark:text-red-400" data-field="email">
                {form.validation.email}
              </div>
            </div>
            <div>
              <label for="company" class="mb-2 block text-sm font-medium text-neutral-800 dark:text-neutral-200">{form.step2.company.label}</label>
              <input type="text" id="company" name="company" placeholder={form.step2.company.placeholder} class="w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-neutral-900 placeholder-neutral-400 dark:border-neutral-800 dark:bg-neutral-800 dark:bg-neutral-950 dark:text-neutral-100" />
            </div>
            <div>
              <label for="phone" class="mb-2 block text-sm font-medium text-neutral-800 dark:text-neutral-200">{form.step2.phone.label}</label>
              <input type="tel" id="phone" name="phone" placeholder={form.step2.phone.placeholder} class="w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-neutral-900 placeholder-neutral-400 dark:border-neutral-800 dark:bg-neutral-800 dark:bg-neutral-950 dark:text-neutral-100" />
            </div>
          </div>
        </div>
        <!-- Step 3: Project Information -->
        <div id="step-3" class="step-content hidden">
          <div class="mb-10">
            <div class="mb-6 flex items-center space-x-3">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl border border-sky-500/20 bg-sky-500/10">
                <svg class="h-6 w-6 text-sky-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2"></path><path d="M9 3m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v0a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z"></path><path d="M9 17v-5"></path><path d="M12 17v-1"></path><path d="M15 17v-3"></path>
                </svg>
              </div>
              <div>
                <h2 class="text-2xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100">{form.step3.title}</h2>
                <p class="text-sm text-neutral-600 dark:text-neutral-400">{form.step3.description}</p>
              </div>
            </div>
          </div>
          <div class="space-y-6">
            <div>
              <label class="mb-3 block text-sm font-medium text-neutral-800 dark:text-neutral-200">{form.step3.projectType.label}</label>
              <div class="grid gap-3 sm:grid-cols-2">
                {
                  form.step3.projectType.options.map((option) => (
                    <label class="flex cursor-pointer items-center space-x-3 rounded-lg border border-neutral-200 bg-neutral-50 p-3 hover:bg-neutral-200 dark:border-neutral-800 dark:bg-neutral-950 dark:hover:bg-neutral-800">
                      <input type="radio" name="projectType" value={option} required class="h-4 w-4 border-neutral-200 dark:border-neutral-800" />
                      <span class="text-neutral-800 dark:text-neutral-200">{option}</span>
                    </label>
                  ))
                }
              </div>
              <div class="error-message mt-1 hidden text-sm text-red-600 dark:text-red-400" data-field="projectType">
                {form.validation.required}
              </div>
            </div>
            <div>
              <label class="mb-3 block text-sm font-medium text-neutral-800 dark:text-neutral-200">{form.step3.budget.label}</label>
              <div class="grid gap-3 sm:grid-cols-2">
                {
                  form.step3.budget.options.map((option) => (
                    <label class="flex cursor-pointer items-center space-x-3 rounded-lg border border-neutral-200 bg-neutral-50 p-3 hover:bg-neutral-200 dark:border-neutral-800 dark:bg-neutral-950 dark:hover:bg-neutral-800">
                      <input type="radio" name="budget" value={option} required class="h-4 w-4 border-neutral-200 dark:border-neutral-800" />
                      <span class="text-neutral-800 dark:text-neutral-200">{option}</span>
                    </label>
                  ))
                }
              </div>
              <div class="error-message mt-1 hidden text-sm text-red-600 dark:text-red-400" data-field="budget">
                {form.validation.required}
              </div>
            </div>
            <div>
              <label class="mb-3 block text-sm font-medium text-neutral-800 dark:text-neutral-200">{form.step3.timeline.label}</label>
              <div class="grid gap-3 sm:grid-cols-2">
                {
                  form.step3.timeline.options.map((option) => (
                    <label class="flex cursor-pointer items-center space-x-3 rounded-lg border border-neutral-200 bg-neutral-50 p-3 hover:bg-neutral-200 dark:border-neutral-800 dark:bg-neutral-950 dark:hover:bg-neutral-800">
                      <input type="radio" name="timeline" value={option} required class="h-4 w-4 border-neutral-200 dark:border-neutral-800" />
                      <span class="text-neutral-800 dark:text-neutral-200">{option}</span>
                    </label>
                  ))
                }
              </div>
              <div class="error-message mt-1 hidden text-sm text-red-600 dark:text-red-400" data-field="timeline">
                {form.validation.required}
              </div>
            </div>
          </div>
        </div>
        <!-- Step 4: Project Details -->
        <div id="step-4" class="step-content hidden">
          <div class="mb-10">
            <div class="mb-6 flex items-center space-x-3">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl border border-sky-500/20 bg-sky-500/10">
                <svg class="h-6 w-6 text-sky-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"></path><path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"></path><path d="M16 5l3 3"></path>
                </svg>
              </div>
              <div>
                <h2 class="text-2xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100">{form.step4.title}</h2>
                <p class="text-sm text-neutral-600 dark:text-neutral-400">{form.step4.description}</p>
              </div>
            </div>
          </div>
          <div class="space-y-6">
            <div>
              <label for="message" class="mb-2 block text-sm font-medium text-neutral-800 dark:text-neutral-200">{form.step4.message.label}</label>
              <textarea id="message" name="message" required rows="6" placeholder={form.step4.message.placeholder} class="w-full resize-none rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-neutral-900 placeholder-neutral-500 dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-100 dark:placeholder-neutral-400"></textarea>
              <div class="error-message mt-1 hidden text-sm text-red-600 dark:text-red-400" data-field="message">
                {form.validation.required}
              </div>
            </div>
            <div>
              <label for="inspiration" class="mb-2 block text-sm font-medium text-neutral-800 dark:text-neutral-200">{form.step4.inspiration.label}</label>
              <textarea id="inspiration" name="inspiration" rows="3" placeholder={form.step4.inspiration.placeholder} class="w-full resize-none rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-neutral-900 placeholder-neutral-500 dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-100 dark:placeholder-neutral-400"></textarea>
            </div>
            <div>
              <label class="mb-3 block text-sm font-medium text-neutral-800 dark:text-neutral-200">{form.step4.hasBranding.label}</label>
              <div class="grid gap-3 sm:grid-cols-1">
                {
                  form.step4.hasBranding.options.map((option) => (
                    <label class="flex cursor-pointer items-center space-x-3 rounded-lg border border-neutral-200 bg-neutral-50 p-3 hover:bg-neutral-200 dark:border-neutral-800 dark:bg-neutral-950 dark:hover:bg-neutral-800">
                      <input type="radio" name="hasBranding" value={option} required class="h-4 w-4 border-neutral-200 dark:border-neutral-800" />
                      <span class="text-neutral-800 dark:text-neutral-200">{option}</span>
                    </label>
                  ))
                }
              </div>
              <div class="error-message mt-1 hidden text-sm text-red-600 dark:text-red-400" data-field="hasBranding">
                {form.validation.required}
              </div>
            </div>
          </div>
        </div>
        <!-- Success Message -->
        <div id="success-message" class="hidden py-12 text-center">
          <div class="mb-8">
            <div class="mx-auto mb-6 flex h-20 w-20 items-center justify-center rounded-full border border-green-500/20 bg-green-100 dark:bg-green-900/20">
              <svg class="h-10 w-10 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <h2 class="mb-4 text-3xl font-bold text-neutral-900 dark:text-neutral-100">{form.success.title}</h2>
            <p class="mx-auto mb-8 max-w-md text-lg text-neutral-800 dark:text-neutral-200">{form.success.message}</p>
            <a href={`${langPrefix}/`} class="inline-flex items-center gap-2 rounded-full bg-sky-500 px-8 py-4 text-lg font-semibold tracking-tight text-white transition-colors duration-200 hover:bg-sky-600 dark:text-black">
              {form.success.backHome}
            </a>
          </div>
        </div>
        <!-- Navigation Buttons -->
        <div id="form-navigation" class="relative mt-12 flex items-center justify-between">
          <button type="button" id="prev-btn" class="cursor-pointer rounded-full border border-neutral-200 bg-white p-3 text-neutral-700 hover:bg-neutral-50 disabled:cursor-not-allowed disabled:opacity-50 disabled:hover:bg-white dark:border-neutral-800 dark:bg-neutral-800 dark:text-neutral-300 dark:hover:bg-neutral-700 dark:disabled:hover:bg-neutral-800" aria-label={form.aria.prev} disabled>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          </button>
          <!-- Carousel-style Progress Indicators - Absolutely Centered -->
          <div class="absolute top-1/2 left-1/2 flex -translate-x-1/2 -translate-y-1/2 transform items-center justify-center space-x-3">
            <div id="step-dot-1" class="step-dot h-3 w-3 rounded-full bg-sky-500 transition-all duration-200"></div>
            <div id="step-dot-2" class="step-dot h-3 w-3 rounded-full bg-neutral-300 transition-all duration-200 dark:bg-neutral-600"></div>
            <div id="step-dot-3" class="step-dot h-3 w-3 rounded-full bg-neutral-300 transition-all duration-200 dark:bg-neutral-600"></div>
            <div id="step-dot-4" class="step-dot h-3 w-3 rounded-full bg-neutral-300 transition-all duration-200 dark:bg-neutral-600"></div>
          </div>
          <button type="button" id="next-btn" class="cursor-pointer rounded-full bg-sky-500 p-3 text-white transition-colors hover:bg-sky-600 disabled:cursor-not-allowed disabled:opacity-50" aria-label={form.aria.next}>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
