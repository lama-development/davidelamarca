---
const { progress, form } = Astro.props;
---

<div class="mb-8 rounded-xl border border-neutral-200 bg-white p-6 dark:border-neutral-700 dark:bg-neutral-800">
  <h3 class="mb-6 text-center text-lg font-semibold tracking-tight text-neutral-900 dark:text-neutral-100">{progress}</h3>
  <div class="relative">
    <div class="absolute top-3 right-3 left-3 h-0.5 bg-neutral-200 dark:bg-neutral-700">
      <div id="progress-line" class="h-full bg-sky-500 transition-all duration-300 ease-in-out"></div>
    </div>
    <div class="relative flex justify-between">
      <div class="flex flex-col items-center">
        <div id="step-indicator-1" class="step-indicator flex h-6 w-6 cursor-pointer items-center justify-center rounded-full bg-sky-500 text-xs font-semibold text-white transition-all duration-300 hover:ring-2 hover:ring-neutral-300 hover:ring-offset-2 hover:ring-offset-white dark:text-neutral-400 dark:hover:ring-neutral-500 dark:hover:ring-offset-neutral-800">1</div>
        <span class="mt-2 text-center text-xs font-medium text-neutral-600 dark:text-neutral-400">{form.steps.project}</span>
      </div>
      <div class="flex flex-col items-center">
        <div id="step-indicator-2" class="step-indicator flex h-6 w-6 cursor-pointer items-center justify-center rounded-full bg-neutral-200 text-xs font-semibold text-neutral-600 transition-all duration-300 hover:ring-2 hover:ring-neutral-300 hover:ring-offset-2 hover:ring-offset-white dark:bg-neutral-700 dark:text-neutral-400 dark:hover:ring-neutral-500 dark:hover:ring-offset-neutral-800">2</div>
        <span class="mt-2 text-center text-xs font-medium text-neutral-600 dark:text-neutral-400">{form.steps.details}</span>
      </div>
      <div class="flex flex-col items-center">
        <div id="step-indicator-3" class="step-indicator flex h-6 w-6 cursor-pointer items-center justify-center rounded-full bg-neutral-200 text-xs font-semibold text-neutral-600 transition-all duration-300 hover:ring-2 hover:ring-neutral-300 hover:ring-offset-2 hover:ring-offset-white dark:bg-neutral-700 dark:text-neutral-400 dark:hover:ring-neutral-500 dark:hover:ring-offset-neutral-800">3</div>
        <span class="mt-2 text-center text-xs font-medium text-neutral-600 dark:text-neutral-400">{form.steps.budget}</span>
      </div>
      <div class="flex flex-col items-center">
        <div id="step-indicator-4" class="step-indicator flex h-6 w-6 cursor-pointer items-center justify-center rounded-full bg-neutral-200 text-xs font-semibold text-neutral-600 transition-all duration-300 hover:ring-2 hover:ring-neutral-300 hover:ring-offset-2 hover:ring-offset-white dark:bg-neutral-700 dark:text-neutral-400 dark:hover:ring-neutral-500 dark:hover:ring-offset-neutral-800">4</div>
        <span class="mt-2 text-center text-xs font-medium text-neutral-600 dark:text-neutral-400">{form.steps.contact}</span>
      </div>
    </div>
  </div>
</div>
