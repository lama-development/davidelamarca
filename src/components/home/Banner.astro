---
const { title, subtitle, button } = Astro.props;
const langPrefix = Astro.url.pathname.startsWith("/en") ? "/en" : "";
---

<section id="banner" class="bg-neutral-50 px-6 py-20 md:py-32 dark:bg-neutral-950">
  <div class="mx-auto max-w-5xl">
    <div class="relative overflow-hidden rounded-3xl border border-sky-600 bg-sky-500 p-8 md:p-16 lg:p-20">
      <div class="relative text-left md:text-center">
        <h2 class="mb-6 text-5xl leading-[0.8] font-bold tracking-tight text-white md:mb-10 md:text-8xl dark:text-black">
          <span class="block">{title}</span>
        </h2>
        <p class="mb-12 max-w-xs text-base leading-[1.1] text-white/90 md:mx-auto md:max-w-xl md:text-lg dark:text-black/80">{subtitle}</p>
        <div class="flex justify-start md:justify-center">
          <a href={`${langPrefix}/contact`} class="group inline-flex items-center gap-2 rounded-full bg-neutral-50 px-8 py-4 text-lg font-semibold tracking-tight text-sky-600 transition-all duration-300 hover:bg-neutral-100 dark:bg-neutral-950 dark:text-sky-400 dark:hover:bg-neutral-800">
            {button}
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
