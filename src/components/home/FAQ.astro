---
const { badge, title, subtitle, questions } = Astro.props;
---

<section id="faq" class="bg-white px-6 py-24 dark:bg-black">
  <div class="mx-auto max-w-7xl">
    <div class="mb-16 text-center">
      <div class="mx-auto mb-6 inline-flex items-center gap-2 rounded-full border border-sky-500/20 bg-sky-500/10 px-3 py-1.5 text-xs font-medium whitespace-nowrap text-sky-600 sm:mb-8 sm:text-sm dark:text-sky-400">
        <svg class="h-4 w-4 text-sky-600 dark:text-sky-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-xs font-medium text-sky-600 sm:text-sm dark:text-sky-400">{badge}</span>
      </div>
      <h2 class="mb-4 text-5xl leading-[0.8] font-semibold tracking-tight text-neutral-900 md:text-5xl dark:text-neutral-100">{title}</h2>
      <p class="mx-auto max-w-xs text-base leading-[1.1] text-neutral-700 md:max-w-xl md:text-lg dark:text-neutral-300">{subtitle}</p>
    </div>

    <div class="mx-auto max-w-4xl divide-y divide-neutral-200 dark:divide-neutral-700">
      {
        questions.map((item) => (
          <div class="py-6">
            <details class="group cursor-pointer">
              <summary class="flex items-center justify-between text-left">
                <h3 class="text-xl font-medium tracking-tight text-neutral-900 dark:text-neutral-100">{item.question}</h3>
                <span class="ml-6 flex h-7 items-center">
                  <svg class="h-6 w-6 rotate-0 transform text-neutral-500 transition-transform duration-200 ease-in-out group-open:rotate-180 dark:text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </span>
              </summary>
              <div class="mt-3 pr-12">
                <p class="text-base text-neutral-700 dark:text-neutral-400" set:html={item.answer} />
              </div>
            </details>
          </div>
        ))
      }
    </div>
  </div>
</section>
