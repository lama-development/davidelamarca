---
import { Image } from "astro:assets";
import projectImg1 from "../../img/sorrento-boat-trips.png";
import projectImg2 from "../../img/skillbridge.png";
const { projects } = Astro.props;
const langPrefix = Astro.url.pathname.startsWith("/en") ? "/en" : "";
---

<section id="projects" class="border-b border-neutral-200 bg-neutral-50 px-6 py-24 dark:border-neutral-800 dark:bg-neutral-950">
  <div class="mx-auto max-w-7xl">
    <div class="mb-16 text-center">
      <div class="mx-auto mb-6 inline-flex items-center gap-2 rounded-full border border-sky-500/20 bg-sky-500/10 px-3 py-1.5 text-xs font-medium whitespace-nowrap text-sky-500 sm:mb-8 sm:text-sm">
        <span class="text-xs font-medium text-sky-500 sm:text-sm">{projects.badge}</span>
      </div>
      <h2 class="mb-4 text-5xl leading-[0.8] font-bold tracking-tight text-neutral-900 dark:text-neutral-100">{projects.title}</h2>
      <p class="mx-auto max-w-xs text-base leading-[1.1] text-neutral-700 md:max-w-xl md:text-lg dark:text-neutral-300">{projects.subtitle}</p>
    </div>
    <div class="grid gap-8 md:grid-cols-2">
      <div class="overflow-hidden rounded-3xl border border-neutral-200 bg-neutral-100 dark:border-neutral-800 dark:bg-neutral-900">
        <div class="flex aspect-video items-center justify-center overflow-hidden border-b border-neutral-200 bg-neutral-200 dark:border-neutral-800 dark:bg-neutral-800">
          <a href="/" aria-label={projects.aria.image1} class="block h-full w-full">
            <Image src={projectImg1} alt="" class="h-full w-full object-cover transition-transform duration-300 ease-in-out hover:scale-105" />
          </a>
        </div>
        <div class="p-6">
          <div class="mb-3 flex flex-wrap items-center gap-3">
            <h3 class="text-xl font-medium tracking-tight text-neutral-900 dark:text-neutral-100">{projects.project1.title}</h3>
          </div>
          <p class="mb-6 text-base text-neutral-700 dark:text-neutral-400">{projects.project1.description}</p>
          <div class="mb-8 flex flex-wrap gap-2">
            <span class="rounded-full border border-sky-500/20 bg-sky-500/10 px-3 py-1 text-xs font-medium text-sky-500">Squarespace</span>
            <span class="rounded-full border border-sky-500/20 bg-sky-500/10 px-3 py-1 text-xs font-medium text-sky-500">SEO</span>
          </div>
          <div>
            <a href="/" class="inline-flex items-center gap-2 rounded-full border border-neutral-200 bg-neutral-50 px-6 py-3 text-sm font-medium text-neutral-700 transition-colors duration-200 hover:bg-neutral-200 dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-200 dark:hover:bg-neutral-800">
              {projects.project1.button}
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
      <div class="overflow-hidden rounded-3xl border border-neutral-200 bg-neutral-100 dark:border-neutral-800 dark:bg-neutral-900">
        <div class="flex aspect-video items-center justify-center overflow-hidden border-b border-neutral-200 bg-neutral-200 dark:border-neutral-800 dark:bg-neutral-800">
          <a href="/" aria-label={projects.aria.image2} class="block h-full w-full">
            <Image src={projectImg2} alt="" class="h-full w-full object-cover transition-transform duration-300 ease-in-out hover:scale-105" />
          </a>
        </div>
        <div class="p-6">
          <div class="mb-3 flex flex-wrap items-center gap-3">
            <h3 class="text-xl font-medium tracking-tight text-neutral-900 dark:text-neutral-100">{projects.project2.title}</h3>
          </div>
          <p class="mb-6 text-base text-neutral-700 dark:text-neutral-400">{projects.project2.description}</p>
          <div class="mb-8 flex flex-wrap gap-2">
            <span class="rounded-full border border-sky-500/20 bg-sky-500/10 px-3 py-1 text-xs font-medium text-sky-500">HTML</span>
            <span class="rounded-full border border-sky-500/20 bg-sky-500/10 px-3 py-1 text-xs font-medium text-sky-500">CSS</span>
            <span class="rounded-full border border-sky-500/20 bg-sky-500/10 px-3 py-1 text-xs font-medium text-sky-500">Javascript</span>
            <span class="rounded-full border border-sky-500/20 bg-sky-500/10 px-3 py-1 text-xs font-medium text-sky-500">SQLite</span>
          </div>
          <div>
            <a href="/" class="inline-flex items-center gap-2 rounded-full border border-neutral-200 bg-neutral-50 px-6 py-3 text-sm font-medium text-neutral-700 transition-colors duration-200 hover:bg-neutral-200 dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-200 dark:hover:bg-neutral-800">
              {projects.project2.button}
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-12 text-center">
      <a href={`${langPrefix}/projects`} class="inline-flex items-center gap-2 rounded-full bg-sky-500 px-8 py-4 text-lg font-semibold tracking-tight text-white transition-colors duration-200 hover:bg-sky-600 dark:text-black">
        {projects.button}
      </a>
    </div>
  </div>
</section>
