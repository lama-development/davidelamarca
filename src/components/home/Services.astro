---
const { services } = Astro.props;
---

<section id="services" class="border-b border-neutral-200 bg-neutral-100 px-6 py-24 dark:border-neutral-800 dark:bg-neutral-900">
  <div class="mx-auto max-w-7xl">
    <div class="mb-16 text-center">
      <div class="mx-auto mb-6 inline-flex items-center gap-2 rounded-full border border-blue-500/20 bg-blue-500/10 px-3 py-1.5 text-xs font-medium whitespace-nowrap sm:mb-8 sm:text-sm">
        <span class="text-xs font-medium text-blue-500 sm:text-sm">{services.badge}</span>
      </div>
      <h2 class="header-section mb-4 text-neutral-900 dark:text-neutral-100">{services.title}</h2>
      <p class="mx-auto max-w-xs text-base leading-[1.1] text-neutral-700 md:max-w-xl md:text-lg dark:text-neutral-300">{services.subtitle}</p>
    </div>
    <div class="flex flex-wrap justify-center gap-8">
      {
        services.servicesList.map((service) => (
          <div class="max-w-md min-w-[280px] flex-1 basis-full rounded-4xl border border-neutral-200 bg-neutral-50 p-8 md:basis-[calc(50%-1rem)] lg:basis-[calc(33.33%-1.5rem)] dark:border-neutral-800 dark:bg-neutral-950">
            <div class="mb-6 flex h-14 w-14 items-center justify-center rounded-2xl border border-blue-500/20 bg-blue-500/10">
              <svg class="h-7 w-7 text-blue-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d={service.icon} />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-semibold tracking-tight text-neutral-900 dark:text-neutral-100">{service.title}</h3>
            <p class="text-base tracking-tight text-neutral-700 dark:text-neutral-400">{service.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
