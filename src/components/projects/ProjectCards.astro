---
import { Image } from "astro:assets";

// Dynamic imports for project images
const images = import.meta.glob("../../img/*.{png,jpg,jpeg,webp}", { eager: true });

const { projects, projectCard, isHomePage = true, viewAllText = "View all projects" } = Astro.props;
const langPrefix = Astro.url.pathname.startsWith("/en") ? "/en" : "";

// Function to get image from dynamic imports
const getImage = (imageName: string) => {
  const imagePath = `../../img/${imageName}`;
  return (images[imagePath] as any)?.default;
};

// Limit to first 3 projects on home page, show all on projects page
const displayProjects = isHomePage ? projectCard.slice(0, 3) : projectCard;
---

<section id="projects" class="border-b border-neutral-200 bg-neutral-50 px-6 py-20 dark:dark:border-neutral-800 dark:bg-neutral-950">
  <div class="mx-auto max-w-7xl">
    {
      isHomePage && (
        <div class="mb-16 text-center">
          <div class="mx-auto mb-6 inline-flex items-center gap-2 rounded-full border border-blue-500/20 bg-blue-500/10 px-3 py-1.5 text-xs font-medium whitespace-nowrap text-blue-500 sm:mb-8 sm:text-sm">
            <span class="text-xs font-medium text-blue-500 sm:text-sm">{projects.badge}</span>
          </div>
          <h2 class="header-section mb-4 text-neutral-900 dark:text-neutral-100">{projects.title}</h2>
          <p class="mx-auto max-w-xs text-base leading-[1.1] text-neutral-700 md:max-w-xl md:text-lg dark:text-neutral-300">{projects.subtitle}</p>
        </div>
      )
    }
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        displayProjects.map((project: any) => (
          <div class="overflow-hidden rounded-4xl border border-neutral-200 bg-neutral-100 dark:dark:border-neutral-800 dark:bg-neutral-900">
            <div class="flex aspect-video items-center justify-center overflow-hidden border-b border-neutral-200 bg-neutral-200 dark:dark:border-neutral-800 dark:bg-neutral-800">
              <a href={project.link} aria-label={project.ariaLabel} target="_blank" rel="noopener" class="block h-full w-full">
                <Image src={getImage(project.image)} alt={project.ariaLabel} class="h-full w-full object-cover" width={1200} height={675} sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw" loading={isHomePage ? "lazy" : "eager"} format="webp" quality={100} />
              </a>
            </div>
            <div class="p-6">
              <div class="mb-3 flex flex-wrap items-center gap-3">
                <h3 class="text-xl font-medium tracking-tight text-neutral-900 dark:text-neutral-100">{project.title}</h3>
              </div>
              <p class="mb-6 text-base tracking-tight text-neutral-700 dark:text-neutral-400">{project.description}</p>
              <div class="mb-8 flex flex-wrap gap-2">
                {project.technologies.map((tech: string) => (
                  <span class="rounded-full border border-blue-500/20 bg-blue-500/10 px-3 py-1 text-xs font-medium text-blue-500">{tech}</span>
                ))}
              </div>
              <div>
                <a href={project.link} target="_blank" rel="noopener" class="inline-flex items-center gap-2 rounded-full border border-neutral-200 bg-neutral-50 px-6 py-3 text-sm font-medium text-neutral-700 hover:bg-neutral-200 dark:dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-200 dark:hover:bg-neutral-800">
                  {project.button}
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    {
      isHomePage && (
        <div class="mt-12 text-center">
          <a href={`${langPrefix}/projects`} class="inline-flex items-center rounded-full bg-blue-500 px-6 py-3 text-lg font-semibold tracking-tight text-white hover:bg-blue-600 dark:text-black">
            {viewAllText}
          </a>
        </div>
      )
    }
  </div>
</section>
