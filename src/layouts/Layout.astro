---
import "../styles/global.css";
import Navbar from "../components/common/Navbar.astro";
import Footer from "../components/common/Footer.astro";
const { t, meta } = Astro.props;
const url = new URL(Astro.request.url);

// Remove trailing slash consistency
let pathname = url.pathname.endsWith("/") ? url.pathname : url.pathname + "/";
const baseUrl = "https://davidelamarca.com";

// Canonical URL
const canonical = baseUrl + pathname;

// Build hreflang links
const altLinks = [
  { lang: "it", href: baseUrl + pathname.replace(/^\/en/, "") }, // Italian version
  { lang: "en", href: baseUrl + (pathname.startsWith("/en") ? pathname : "/en" + pathname) }, // English version
  { lang: "x-default", href: baseUrl + pathname.replace(/^\/en/, "") } // Fallback
];
---

<!doctype html>
<html lang={t.lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#000000" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{meta.title}</title>
    <meta name="description" content={meta.description} />
    <link rel="canonical" href={canonical} />
    {altLinks.map((link) => <link rel="alternate" href={link.href} hreflang={link.lang} />)}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-neutral-50 dark:bg-neutral-950">
    <Navbar navbar={t.navbar} />
    <slot />
    <Footer footer={t.footer} />
  </body>
</html>

<script src="../scripts/theme.js"></script>
<script src="../scripts/navbar.js"></script>
<script src="../scripts/language.js"></script>
