---
import Layout from "../layouts/Layout.astro";
import PageNotFound from "../components/common/PageNotFound.astro";
import it from "../i18n/it";
import en from "../i18n/en";

// Get the current URL and check for language
const url = Astro.url.pathname;
const isEnglish = url.startsWith("/en");
const t = isEnglish ? en("/en") : it("");
---

<Layout t={t} meta={t.pageNotFound.meta}>
  <PageNotFound {...t.pageNotFound} />
</Layout>
